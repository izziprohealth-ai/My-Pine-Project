alertcondition(buy1,title = "IBO BUY",message = "IBO BUY | {{ticker}} | Price: {{close}}")

alertcondition(buy2,title = "IBO STRONG BUY",message = "IBO STRONG BUY | {{ticker}} | Price: {{close}}")

alertcondition(anySignal,title = "IBO ANY SIGNAL",message = "IBO SIGNAL | {{ticker}} | Price: {{close}}")


